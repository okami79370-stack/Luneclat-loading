<script>
let progress = 0;
const bar = document.getElementById("bar");
const percentText = document.getElementById("percent");

/*
 GMod NE DONNE PAS le vrai % exact.
 On simule intelligemment (comme 99% des serveurs RP)
*/
const fakeLoading = setInterval(() => {
    if (progress < 95) {
        progress += Math.random() * 2;
        bar.style.width = progress + "%";
        percentText.innerText = "Chargement : " + Math.floor(progress) + "%";
    }
}, 500);

</script>
